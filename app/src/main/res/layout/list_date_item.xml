<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_date_item_text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="14"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/ic_circle"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/list_date_item_income_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_date_item_text"
        android:textSize="18sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/list_date_item_income_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_date_item_income_text"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/list_date_item_outcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_date_item_text"
        android:textSize="18sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/list_date_item_outcome_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_date_item_outcome_text"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>