<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/description_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加备注"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/description_dialog_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/20"
        android:layout_alignParentRight="true"/>

    <com.example.keepbookkeeping.ui.SearchEditText
        android:id="@+id/description_dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/description_dialog_title"
        android:maxLength="20"
        android:layout_marginTop="10dp"
        android:background="@drawable/boder"/>

</RelativeLayout>